extends layout

block specific-css
	!= css('adminsites')

block content
		.row
			.span12
				table#sites-table.table.table-bordered.table-hover.table-condensed
					thead
						th ID
						th URL
						th IP
						th Problem ?
						th Delete
					tbody
						each item in sites
							tr 
								td= item.site_id
								td= item.url
								td
									select
										each ip in item.ip
											option= ip
								td
									if item.haz_problem == 1
										i.fui-lock
									else
										i.fui-radio-unchecked
								td
									button.btn.btn-danger.delete(href="#", data-site-id=item.site_id)
										i.fui-cross
										|  Delete
block specific-js
	script(src="/js/jquery.dataTables.min.js")
	!= js('adminsites')

