extends layout

block content
	div.container
		div.row
			div.span12
				table.table.table-bordered.table-striped.table-hover
					thead
						th ID
						th Name
						th Primary IP
						th Secondary IP
						th Country
						th ISP ?
						unless !isTemp
							th Validate
						th Edit
						th Delete
					tbody
						each item in servers
							tr
								if isTemp
									td= item.dns_server_temp_id
								else
									td= item.dns_server_final_id
								td= item.name
								td= item.primary_ip
								td= item.secondary_ip
								td= item.location
								td 
									if item.is_isp == 1
										i.icon-ok
									else
										i.icon-remove
								if isTemp
									td
										button.btn.btn-success(href="#", data=item.dns_server_temp_id) 
											i.icon-ok-sign.icon-white
											| Add
								td
									button.btn.btn-warning(href="#")
										i.icon-plus-sign.icon-white 
										| Edit
								td
									button.btn.btn-danger(href="#")
										i.icon-remove-sign.icon-white
										| Delete

