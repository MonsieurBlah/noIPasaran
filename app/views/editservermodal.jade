!!! 5
html
	head
	body
		form#editform(action="/admin/servers/edit", method="post")
			fieldset
				input#id(name="dns_server_id", type="hidden", value=server.dns_server_id)
				input#dnsname.input-xlarge(name="name", type="text", placeholder="Name of the DNS provider", required, value=server.name)
				input#primaryip.input-xlarge( name="primary_ip", type="text", placeholder="The primary IP", required, value=server.primary_ip)
				input#secondaryip.input-xlarge(name="secondary_ip", type="text", placeholder="The secondary IP", required, value=server.secondary_ip) 
				input#location.input-xlarge(name="location", type="text", placeholder="Country or Global", required, value=server.location)
				label#checkline.checkbox
					if server.is_isp == 1
						input#is_isp(name="is_isp",type="checkbox", checked)
					else 
						input#is_isp(name="is_isp",type="checkbox") 
					p Check if this is an ISP