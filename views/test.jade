extends layout

block content
	section(id="tables")
		div.page-header
			h1 Tables
		table.table.table-bordered.table-striped.table-hover
			thead
				tr
					th Name
					th Primary IP
					th Secondary IP
					th ISP ?
					th Date
			tbody
			each item in dnslist
				tr
					td= item.name
					td= item.primaryIP
					td= item.secondaryIP
					td 
						if item.isISP
							a.btn.btn-success.btn-small() Yes
						else
							a.btn.btn-danger.btn-small() No
					td= item.updatedAt



