extends layout

block content
	section(id="tables")
		div.page-header
			h1 Tables
		table.table.table-bordered.table-striped.table-hover
			thead
				th Name
				th Primary IP
				th Secondary IP
				th Country
				th ISP ?
				th Validate
				th Edit
				th Delete
			tbody
				each item in dnslist
					tr
						td= item.DNSname
						td= item.primaryIP
						td= item.secondaryIP
						td= item.country
						td 
							if item.isISP
								a.btn.btn-success.btn-small() Yes
							else
								a.btn.btn-danger.btn-small() No
						td
							a(href="/validate/"+item._id) Validate
						td
							a(href="/edit/"+item._id) Edit
						td
							a(href="/destroy/"+item._id) Delete